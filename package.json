{
  "name": "mcp-gateway",
  "version": "1.0.0",
  "description": "An MCP gateway that aggregates multiple MCP servers into a unified interface",
  "type": "module",
  "main": "build/index.js",
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun run src/index.ts",
    "type-check": "tsc --noEmit",
    "test": "bun run tests/e2e-test.ts",
    "test:quick": "bun run tests/e2e-simple.ts",
    "test:payment": "bun run tests/e2e-payment.ts",
    "test:passthrough": "bun run tests/e2e-passthrough.ts",
    "test:all": "bun run test:quick && bun run test && bun run test:payment && bun run test:passthrough"
  },
  "keywords": ["mcp", "gateway", "aggregator", "server", "proxy", "model-context-protocol"],
  "author": "MCP Gateway",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/elizaOS/mcp-gateway.git"
  },
  "homepage": "https://github.com/elizaOS/mcp-gateway#readme",
  "bugs": {
    "url": "https://github.com/elizaOS/mcp-gateway/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "axios": "^1.7.9",
    "viem": "^2.21.45",
    "x402": "^0.6.5",
    "x402-axios": "^0.6.0",
    "yaml": "^2.6.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^24.6.0",
    "typescript": "^5.7.0"
  },
  "bin": {}
}
